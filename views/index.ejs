<%- include('partials/header') %>

<div class="container mt-2">
  <div class="row">
    <div class="col-lg-10 mx-auto text-center">
      <div class="hero-section py-5">
        <h1 class="display-4 mb-4">Discover Your Next Favorite Movie</h1>
        <p class="lead mb-4">Search for movies using advanced semantic technology that understands what you're looking for.</p>
        
        <div class="search-container">
          <form id="searchForm" action="/search" method="POST">
            <div class="input-group mb-3">
              <input type="text" id="searchInput" class="form-control form-control-lg" placeholder="Try 'sci-fi movies with time travel' or 'romantic comedies in Paris'" name="searched_data">
              <select id="searchType" name="searchType" class="form-select form-select-lg" style="max-width: 180px;">
                <option value="keyword">Keyword</option>
                <option value="semantic" selected>Semantic</option>
                <option value="hybrid">Hybrid</option>
              </select>
              <button class="btn btn-primary btn-lg" type="submit">
                <i class="fas fa-search me-1"></i>Search
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <div id="recommendationsContainer">
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/history.js"></script>
